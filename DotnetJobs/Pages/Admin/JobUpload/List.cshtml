@page "/admin/job-uploads"
@model List
@{
	Layout = "_AuthLayout";
}

<section class="max-w-5xl mx-auto py-28 min-h-screen px-4 space-y-12">
	<div>
		<h1 class="text-2xl font-bold text-gray-800">
			Job Uploads
		</h1>
		<nav class="space-x-4 text-blue-500">
			<a href="/admin/dashboard">Dashboard</a>
			<a href="/admin/job-uploads">Job Uploads</a>
			<a href="/admin/job-uploads/create">Create Job Upload</a>
		</nav>
	</div>
	<article>
		@foreach (var job in Model.JobUploads)
		{
			<div class="my-4 bg-white border shadow p-4 space-y-1">
				<p>Company: @job.CompanyName</p>
				<p>Apply Link: @job.ApplyLink</p>
				<p>Status: @job.Status</p>
			</div>
		}
	</article>
</section>