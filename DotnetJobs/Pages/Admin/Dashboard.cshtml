@page "/admin/dashboard"
@model Dashboard
@{
	Layout = "_AuthLayout";
}

<section class="max-w-5xl mx-auto py-28 min-h-screen px-4 space-y-12">
	<div>
		<h1 class="text-2xl font-bold text-gray-800">
			Admin Dashboard
		</h1>
		<nav class="space-x-4 text-blue-500">
			<a href="/admin/dashboard">Dashboard</a>
			<a href="/admin/job-uploads">Job Uploads</a>
			<a href="/admin/job-uploads/create">Create Job Upload</a>
		</nav>
	</div>
	<article>
		<h2 class="text-lg font-bold">Weekly newsletter</h2>
		<div class="flex border-4 p-6 flex-col">
			<img class="h-auto w-96 mx-auto" src="https://embed.filekitcdn.com/e/jQTBapYVvFqr6Gb6JYXHdh/oZQmeRFkeF1Uk85mLShVrQ" />
			@if (Model.Jobs != null)
			{
				<div class="mt-12 space-y-6">
					<p>Hey there 👋</p>
					<p>I wanted to let you know about @Model.Jobs.Count new .NET jobs!</p>
				</div>
				<div class="mt-12 space-y-12">
					@foreach (var job in Model.Jobs)
					{
						<div class="">
							<p>
								<a class="text-blue-500 underline" href="https://dotnet-jobs.com/jobs/@job.Slug" target="_blank">@job.Title</a> at @job.Company.Name
							</p>
							<p class="mt-4 text-sm italic">@job.WorkType.Name • @job.RemotePolicy.Name • @job.ExperienceLevel.Name</p>
						</div>
					}
				</div>
			}
		</div>
	</article>
</section>
